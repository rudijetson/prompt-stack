# ================================================
# FRONTEND CONFIGURATION
# ================================================
# 1. Copy this file to .env.local
# 2. Add your Supabase keys (optional)
# 3. Restart: docker-compose restart frontend
# ================================================

# API Connection
# Change this if running the backend on a different port
# Examples: http://localhost:8002, http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8000

# Supabase (Optional - for real authentication)
# Get free project: https://supabase.com
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Stripe (Optional - for payments UI)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Feature Flags
NEXT_PUBLIC_DEMO_MODE=false